
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@*css kodalrını yazmak icin admin layouta yazdıgım section*@
@section style{
    <style>
         #ortala {
            margin-left:450px;
        }
    </style>
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h1 class="box-title" id="ortala">Categori Ekle</h1>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="/Admin/Category/Add" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label for="Adi">Adı</label>
                    <input type="text" name="Adi" class="form-control" >
                </div>
                <div class="form-group">
                    <label for="Aciklama">Aciklama</label>
                    <textarea name="Aciklama" class="form-control" rows="5"></textarea>
                </div>
                
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit"  class="btn btn-block btn-info btn-sm">EKLE</button>
            </div>
        </form>
    </div>
    <!-- /.box -->
    @section script{
        @*Aynı İsimde Kategori eklenmesini onleyip kontrol eden script*@
        @if (ViewBag.CategoryVar!=null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.CategoryVar")
                }
            </script>
        }
        }
</div>

